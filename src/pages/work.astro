---
import WorkItem from "@/components/ui/WorkItem.astro";
import Layout from "../layouts/Layout.astro";
import { workHistory } from "../lib/workData";
import ContactForm from "@/components/ContactForm.vue";
---

<Layout>
  <main class="container flex flex-col gap-4">
    <section class="flex flex-col gap-4">
      <h1 class="text-md">Employment History</h1>
      <p class="text-base">
        I have been working proffesionally for almost a year now. I have worked
        with many clients and had direct contact with them.
      </p>
    </section>
    <div class="h-0.5 w-full bg-primary"></div>
    <section class="flex h-[60dvh] flex-col overflow-y-scroll px-2 pb-4">
      <ContactForm client:load />
      {workHistory.map((work, index) => <WorkItem work={work} />)}
    </section>
  </main>
</Layout>
