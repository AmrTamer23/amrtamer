---
import { Image } from "astro:assets";
import { AiFillGithub } from "react-icons/ai";
import { FaLinkedin } from "react-icons/fa";
import { FiDownload } from "react-icons/fi";
---

<main id="home" class="flex select-none flex-col pt-36">
  <section class="flex h-[80vh] flex-col gap-14">
    <span class="text-3xl">Hi, my name is</span>
    <h1 class="text-8xl">Amr Tamer</h1>
    <h2 class="hide text-8xl text-textBase !opacity-60">Software Engineer,</h2>
    <p class="hide text-4xl leading-snug">
      Front-End Developer and Computer Science Student who is always eager to
      learn new things.
    </p>
    <div class="hide flex items-center gap-4">
      <a
        href="https://drive.google.com/file/d/10RrYjeea-F6ZpEsufV9v3FTMnaosrYiV/view?usp=sharing"
        target="_blank"
      >
        <button class="group/downloadCV flex items-center gap-2">
          <FiDownload
            size={25}
            className="group-hover/downloadCV:animate-bounce"
          />
          <span> Download CV </span>
        </button>
      </a>
      <a
        href="https://github.com/AmrTamer23"
        target="_blank"
        aria-label="Github Account"
      >
        <button>
          <AiFillGithub size={28} />
        </button>
      </a>
      <a
        href="https://www.linkedin.com/in/amrtamer23/"
        target="_blank"
        aria-label="LinkedIn Account"
      >
        <button>
          <FaLinkedin size={28} />
        </button>
      </a>
    </div>
  </section>
  <section class="hide flex flex-col gap-28">
    <div class="flex flex-col justify-center gap-7">
      <h2 class="text-center text-5xl">Languages</h2>

      <Image
        src="https://skillicons.dev/icons?i=cpp,python,html,css,js,ts"
        alt="Languages"
        class="w-2/5 self-center"
        inferSize
        loading="eager"
      />
    </div>
    <div class="flex flex-col justify-center gap-7">
      <h2 class="text-center text-5xl">Frameworks/Libs/Tools</h2>

      <Image
        src="https://skillicons.dev/icons?i=tailwindcss,react,nextjs,astro,firebase,figma"
        alt="Frameworks/Libs/Tools"
        class="w-2/5 self-center"
        inferSize
        loading="eager"
      />
    </div>
  </section>
</main>
