---
const { project } = Astro.props as { project: Project };
---

<div
  class="w-full flex h-fit bg-rich_black-600 rounded-lg hide my-7 overflow-clip"
>
  <img
    src={project.image}
    alt="QuizMaster"
    class="w-2/5 object-cover"
    loading="lazy"
  />

  <span class="flex flex-col gap-5 m-5">
    <h2 class="text-4xl">{project.name}</h2>
    <p class="text-2xl">{project.description}</p>
    <span class="text-2xl flex flex-col gap-3">
      Key Features:
      <ul class="list-disc list-inside">
        {project.features.map((feature) => <li>{feature}</li>)}
      </ul>
    </span>
    <span class="text-2xl flex gap-3">
      <p class="self-end">Built With</p>
      <img
        src={`https://skillicons.dev/icons?i=` + project.technologies}
        class="inline"
      />
    </span>
    <span class="flex gap-3">
      <a
        href={project.link}
        target="_blank"
        class="text-2xl bg-rich_black-500 px-5 py-2 rounded-lg"
      >
        Visit It
      </a>
      <a
        href={project.sourceCode}
        target="_blank"
        class="text-2xl bg-rich_black-500 px-5 py-2 rounded-lg"
      >
        Source Code
      </a>
    </span>
  </span>
</div>
